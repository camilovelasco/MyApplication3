<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="15dp"
    card_view:cardElevation="10dp"
    card_view:cardUseCompatPadding="true">

    <AbsoluteLayout
        android:layout_width="match_parent"
        android:layout_height="138dp"
        android:orientation="vertical"
        android:background="@android:color/holo_blue_dark">


        <TextView
            android:id="@+id/tipo"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:layout_x="28dp"
            android:layout_y="56dp"
            android:text="Nombre del Restaurante:"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColorLink="@android:color/white"
            android:textColor="@color/cardview_light_background"
            tools:textSize="14sp"
            android:textSize="@dimen/activity_vertical_margin" />

        <TextView
            android:text="RESTAURANTES NARIÃ‘O"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="66dp"
            android:layout_y="13dp"
            android:id="@+id/textView"
            android:textColor="@android:color/holo_orange_light"
            tools:textSize="24sp" />

        <TextView
            android:id="@+id/clase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="122dp"
            android:layout_y="72dp"
            android:text="@string/app_name"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@color/cardview_light_background" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:srcCompat="@android:drawable/arrow_down_float"
            android:layout_x="3dp"
            android:layout_y="4dp"
            android:id="@+id/imageButton2"
            android:onClick="acercaDe" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:srcCompat="@android:drawable/ic_delete"
            android:layout_x="162dp"
            android:layout_y="107dp"
            android:id="@+id/imageButton3"
            android:onClick="salir"
            android:background="@android:color/holo_blue_dark" />


    </AbsoluteLayout>
</android.support.v7.widget.CardView>